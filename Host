# FunÃ§Ã£o de painel admin
painel_admin() {
    clear
    echo -e "\e[1;31mğŸ”‘ Para acessar o painel admin, insira a senha:\e[0m"
    read -p "Senha: " senha
    if [[ "$senha" == "16052011" ]]; then
        echo -e "\e[1;32mğŸ” Acesso concedido! Bem-vindo ao painel Admin.\e[0m"
        admin_menu
    else
        echo -e "\e[1;31mSenha incorreta! Tente novamente.\e[0m"
        sleep 2
        samp_host_menu
    fi
}

# FunÃ§Ã£o de menu Admin
admin_menu() {
