# FunÃ§Ã£o para pegar o IP
pegar_ip() {
    clear
    echo -e "\e[1;32mğŸŒ Obtendo seu IP...\e[0m"
    ip=$(curl -s ifconfig.me)
    echo -e "\e[1;32mSeu IP: $ip\e[0m"
    sleep 2
    logged_in_menu
}

# FunÃ§Ã£o para logar o IP
logar_ip() {
    clear
    echo -e "\e[1;32mğŸ” Insira o IP para logar:\e[0m"
    read -p "IP: " ip
    echo -e "\e[1;32mLogando no IP $ip...\e[0m"
    sleep 2
    logged_in_menu
}

