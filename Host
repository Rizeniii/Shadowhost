# FunÃ§Ã£o de logar com Key
logar_key() {
    clear
    echo -e "\e[1;32mğŸ”‘ Por favor, insira sua Key de login:\e[0m"
    read -p "Key: " key
    echo "Logando com a Key: $key..."
    sleep 1
    logged_in_menu
}

# Menu apÃ³s logar com a Key
